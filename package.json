{
  "name": "glow-flow-app-backend",
  "version": "0.1.0",
  "private": true,
  "description": "NestJS backend for Glowflow (Docker + Postgres)",
  "license": "MIT",
  "scripts": {
    "start": "node dist/main.js",
    "start:dev": "nest start --watch",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --max-warnings=0",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d src/database/typeorm.data-source.ts src/database/migrations/auto",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d src/database/typeorm.data-source.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d src/database/typeorm.data-source.ts",
    "seed": "ts-node -r tsconfig-paths/register src/database/seeds/seed.ts",
    "seed:run": "ts-node src/database/seeds/run-seed.ts",
    "test:unit": "jest --testPathPattern=spec.ts",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:all": "npm run test:unit && npm run test:e2e"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.7",
    "@nestjs/config": "^3.2.3",
    "@nestjs/core": "^10.4.7",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.7",
    "@nestjs/swagger": "^7.4.2",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "helmet": "^8.0.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.7",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.21",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.6.3",
    "typeorm-ts-node-commonjs": "^0.0.9"
  }
}

