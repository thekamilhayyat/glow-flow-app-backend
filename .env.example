# Database
# Connection pool settings:
# - connection_limit=10: Maximum connections in pool
# - pool_timeout=5: Timeout (seconds) for getting connection from pool
# - statement_timeout=5000: Timeout (milliseconds) for individual queries
DATABASE_URL="postgresql://user:password@localhost:5432/glowflow?schema=public&connection_limit=10&pool_timeout=5&statement_timeout=5000"

# JWT (REQUIRED)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Encryption (REQUIRED)
ENCRYPTION_KEY="your-32-character-encryption-key-here"

# Server
PORT=3000
NODE_ENV=development

# CORS
CORS_ORIGINS="http://localhost:3000,http://localhost:3001"

# Stripe (Optional - for payments)
STRIPE_SECRET_KEY="sk_test_xxx"

# Email (Optional - for notifications)
SMTP_HOST="smtp.example.com"
SMTP_PORT=587
SMTP_USER="user@example.com"
SMTP_PASS="password"
SMTP_FROM="noreply@glowflow.com"

# SMS (Optional - for notifications)
TWILIO_ACCOUNT_SID="ACxxx"
TWILIO_AUTH_TOKEN="xxx"
TWILIO_PHONE_NUMBER="+1234567890"
